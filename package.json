{
  "name": "jonshort.me",
  "version": "0.1.0",
  "description": "Personal website of Jon Short - Designer",
  "homepage": "https://jonshort.me",
  "main": "index.js",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/JonShort/jonshort.me"
  },
  "devDependencies": {
    "gh-pages": "^0.12.0",
    "imagemin-cli": "^3.0.0",
    "react-scripts": "0.8.3",
    "tachyons": "^4.5.5",
    "tachyons-cli": "^1.0.10"
  },
  "dependencies": {
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-router": "^3.0.0"
  },
  "scripts": {
    "start": "react-scripts start . --history-api-fallback",
    "build": "react-scripts build",
    "deploy": "gh-pages -d build && npm run clean",
    "clean": "rm -rf build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "css": "tachyons src/App.css > src/index.css --minify",
    "images": "imagemin assets/images/* -o=src/images && imagemin assets/images/articleThumbs/* -o=src/images/articleThumbs",
    "prestart": "npm run css && npm run images",
    "prebuild": "npm run css && npm run images",
    "predeploy": "npm run build"
  }
}
